doctype html
html(lang='fa')
  head
    title سامانه آموزش مجازی
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') سامانه آموزش مجازی
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            if user
              li(class=(title == 'members' ? 'active' : ''))
                a(href='/') دوره‌ها
            if !user
              li(class=(title == 'register' ? 'active' : ''))
                a(href='/users/register') ثبت نام
              li(class=(title == 'login' ? 'active' : ''))
                a(href='/users/login') ورود به حساب کاربری
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') خروج از حساب کاربری
    .container
      !=messages()
    block content

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')