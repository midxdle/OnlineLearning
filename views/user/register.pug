extends ../base

block content
  link(href='/stylesheets/user/register.css', rel='stylesheet')
  h2.page-header ثبت نام در سامانه
  div(class="main")
    p.page-header لطفا اطلاعات مورد نظر را وارد نمایید :
    if errors
      each error, i in errors
        div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register')
      div(class="forms")
        div(class="subforms")
          .form-group
            label نام کاربری :
            input.form-control(name='username', type='text', placeholder='نام کاربری خود را وارد نمایید')
          .form-group
            label رایانامه :
            input.form-control(name='email', type='email', placeholder='ایمیل خود را وارد نمایید')
          .form-group
            label رمز عبور :
            input.form-control(name='password', type='password', placeholder='رمز عبور خود را وارد نمایید')
          .form-group
            label تایید رمز عبور :
            input.form-control(name='verifyPassword', type='password', placeholder='تاییدیه رمز عبور را وارد نمایید')
          .form-group
            label شماره دانشجویی :
            input.form-control(name='studentNumber', type='text', placeholder='شماره دانشجویی خود را وارد نمایید')
        div(class="btnform")
          input.btn.btn-primary(type='submit', name='submit',value='ثبت نام')