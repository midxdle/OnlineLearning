extends ../teacher

block content
  link(href='/stylesheets/teacher/content/content.css', rel='stylesheet')
  if errors
    each error, i in errors
      div.alert.alert-danger #{error.msg}
  h1 لیست محتواها
  div(class="main")
    div(class="forms")
      form(method='get', action='/teacher/contents/add')
        input.btn.btn-primary(type='submit', name='create', value='ایجاد محتوا')
      div(class="subs")
        if subcontents
          each subcontent in subcontents
            div(class="subcontents")
              h4 نام محتوا : #{subcontent.name}
              h4 شماره شناسایی : #{subcontent.contentID}
              h4 نام محتوای قبلی : 
                span #{subcontent.prev}
              div(class="edit")
                form(method='get', action=`/teacher/contents/edit/${subcontent._id}`)
                  input.btn.btn-primary(type='submit', name='edit', value='ویرایش محتوا')
                form(method='post', action=`/teacher/contents/${subcontent._id}`)
                  input.btn.btn-primary(type='submit', name='delete', value='حذف محتوا')
