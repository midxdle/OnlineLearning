extends base

block content
  h2.page-header ورود به سامانه 
  p لطفا اطلاعات کاربری خود را وارد نمایید. 
  if errors
    each error, i in errors
      div.alert.alert-danger #{error.msg}
  form(method='post', action='/users/login')
    .form-group
      label نام کاربری :
      input.form-control(name='username', type='text', placeholder='نام کاربری خود را وارد کنید')
    .form-group
      label رمز عبور :
      input.form-control(name='password', type='password', placeholder='رمز عبور خود را وارد کنید')
    input.btn.btn-primary(type='submit', name='submit',value='ورود')